---
import I18n from "@components/MainI18n.astro";
import type { CommonFrontmatter } from "@src/types";
interface Props {
	frontmatter: CommonFrontmatter
}

const
	{frontmatter} = Astro.props,
	title = frontmatter?.title || '';
---
<I18n {frontmatter} collection="pages">
	<main id="main" class="prose">
		{title &&
			<h1>{title}</h1>
		}
		<slot/>
	</main>
</I18n>
