---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import PostTags from "@components/PostTags.astro";
import I18n from "@components/I18n.astro";


type Props = CollectionEntry<"blog">["data"];

const
  frontmatter = Astro.props,
  { title, pubDate, updatedDate, previewImage, tags} = Astro.props,
  realTags = tags.filter((tag)=>{return tag !== 'other'})
---

<I18n frontmatter={frontmatter} collection="blog">
  <main id="main" tabindex=”1”>
    <article>
      <header>
        <div class="hero-image">
          {previewImage && <img width={1020} height={510} src={previewImage} alt="" />}
        </div>
        <FormattedDate date={pubDate} />
        {
          updatedDate && (
            <p class="last-updated-on">
              Last updated on <FormattedDate date={updatedDate} />
            </p>
          )
        }
        <h1>{title}</h1>
      </header>
      <div class="prose">
        <slot />
      </div>
      {realTags.length > 0 &&
        <footer>
          <PostTags tags={realTags} />
        </footer>
      }
    </article>
  </main>
</I18n>