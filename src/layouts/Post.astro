---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import I18n from "@components/I18n.astro";

type Props = CollectionEntry<"blog">["data"];

const
  frontmatter = Astro.props,
  { title, pubDate, updatedDate, previewImage} = Astro.props;
---

<I18n frontmatter={frontmatter} collection="blog">
  <main id="main" tabindex=”1”>
    <article>
      <div class="hero-image">
        {previewImage && <img width={1020} height={510} src={previewImage} alt="" />}
      </div>
      <div class="title">
        <div class="date">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <div class="last-updated-on">
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
        <h1>{title}</h1>
        <div class="prose">
          <slot />
        </div>
      </div>
    </article>
  </main>
</I18n>